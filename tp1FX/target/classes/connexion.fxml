<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root" stylesheets="@application.css" fx:controller="JavaFXS1.connexion.ControllerConnexion">

	<padding>
		<Insets top="25" right="25" bottom="10" left="25" />
	</padding>
	
	<HBox alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
	      <Text id="bienvenue" text="Connexion d'un utilisateur" fx:id="bienvenue"/>
 	</HBox>

	<Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<TextField fx:id="monTexte" GridPane.columnIndex="1" GridPane.rowIndex="1" />
	<Label text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
	<PasswordField fx:id="monMotPasse" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	
  	<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2">
              <Button text="Valider" onAction="#actionValider" />
              <Button text="annuler" onAction="#actionAnnuler" />
  	</HBox>
  

</GridPane>

